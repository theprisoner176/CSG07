<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_walk_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="@string/edit_walk_title"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLength="100" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edit_walk_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ,./\() "
            android:ems="10"
            android:hint="@string/edit_walk_description"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLength="99" />

        <EditText
            android:id="@+id/edit_walk_long_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.71"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ,./\() "
            android:ems="10"
            android:hint="@string/edit_walk_long_description"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLength="1000" />

    </LinearLayout>

</RelativeLayout>
